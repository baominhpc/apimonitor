# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET    /                                      controllers.Application.index
GET    /getapi                                controllers.Application.getapi(url : String)

GET    /get_apis_list                         controllers.Application.getListAPI
GET    /get_apis_from                         controllers.Application.getListAPIInRest(rest:String)

GET    /get_detail_of_test_case               controllers.Application.getListTestCaseDetail(id:String)
GET    /get_list_mobion_test_case             controllers.Application.getListMobionTestCase(start:String,size:String)
GET    /get_test_case_detail_by_id            controllers.Application.getTestCaseDetailById(id:String)
POST   /add_function_to_test_case             controllers.Application.addFunctionInTestCase
POST   /remove_function_from_test_case        controllers.Application.removeFunctionInTestCase
GET   /build_database_for_testcase			  controllers.Application.buildAPIDatabase
#Testcase controller

GET 	/testcase								controllers.TestCaseApplication.index
GET		/testcases								controllers.TestCaseApplication.getTestcases(start: Int = 0, size: Int = 100)
POST	/add_test_case                         	controllers.TestCaseApplication.addTestCase
POST	/delete_test_case/:id                         	controllers.TestCaseApplication.deleteTestCase(id : String)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


